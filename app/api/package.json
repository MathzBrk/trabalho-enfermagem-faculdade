{
  "private": true,
  "name": "node-ts-setup",
  "version": "1.0.0",
  "description": "Project Setup - NodeJs with Typescript",
  "main": "index.js",
  "author": "Matheus Borges",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start:dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "check": "npx @biomejs/biome check --write ./src",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch",
    "test:push": "jest --passWithNoTests --collectCoverage",
    "prepare": "husky || true",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node src/infrastructure/database/prisma/seed.ts",
    "prisma:reset": "prisma migrate reset --force",
    "docker:up": "docker compose up -d",
    "docker:up:safe": "docker ps -q -f name=univas-enfermagem-db | grep -q . && echo 'Container already running' || docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "db:reset": "npm run docker:reset && npm run prisma:generate",
    "db:setup": "npm run docker:up && npm run prisma:generate && npx prisma migrate dev",
    "db:shell": "docker exec -it univas-enfermagem-db psql -U postgres -d univas_enfermagem",
    "db:tables": "docker exec univas-enfermagem-db psql -U postgres -d univas_enfermagem -c '\\dt'",
    "db:users": "docker exec univas-enfermagem-db psql -U postgres -d univas_enfermagem -c 'SELECT * FROM users;'",
    "dev": "npm run docker:up:safe && npm run start:dev"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.1",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@types/express": "^5.0.3",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.18.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}
